<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Campingplatz bearbeiten</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Titel</label>
                    <input class="form-control" type="text" name="campground[title]" id="title"
                        value="<%= campground.title %> " required>
                    <div class="valid-feedback">
                        Sieht gut aus!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="localtion">Lage</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        value="<%= campground.location %> " required>
                    <div class="valid-feedback">
                        Sieht gut aus!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="img">Bild hochladen</label>
                    <input type="file" name="img" id="img" multiple>
                    <div class="valid-feedback">
                        Sieht gut aus!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campingplatz Preis</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">€</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campground.price %> "
                            required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Bezeichnung</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required><%= campground.description %></textarea>
                    <div class="valid-feedback">
                        Sieht gut aus!
                    </div>
                </div>
                <label for="hoch">Bilder hochladen</label>
                <div class="input-group mb-3 custom-file" id="hoch">
                    <input type="file" class="form-control" id="img" name="img" aria-label="Hochladen" multiple>
                    <label class="input-group-text" for="img">Hochladen</label>
                </div>
                <div class="mb-3">
                    <% campground.imgs.forEach(function(img,i) { %>
                        <img src="<%= img.thumbnail %> " alt="" class="img-thumbnail" crossorigin>
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" id="img-<%= i %>" value="<%= img.filename %>">
                        </div>
                        <label for="img-<%= i %>">Löschen?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Campingplatz sparen</button>
                </div>
            </form>

            <a href="/campgrounds/<%= campground._id  %> ">Zurück</a>
        </div>
    </div>